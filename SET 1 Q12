#include <iostream>
using namespace std;

int main()
{
for(int i=0;i<5;i++)
{
    for(int j=0;j<5;j++)
    {
        if(i<j)
        cout<<" ";
        else cout<<"*";
    }
    cout<<endl;
}

for(int i=4;i>=0;i--)
{
    for(int j=3;j>=0;j--)
    {
        if(i+j<=3)
        cout<<" ";
        else cout<<"*";
    }
    cout<<endl;
}
    return 0;
}
