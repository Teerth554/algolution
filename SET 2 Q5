#include <iostream>
#include <vector>
using namespace std;
int findEquilibriumIndex(vector<int>& arr) {
    int total_sum = 0;
    int left_sum = 0;

  
    for (int num : arr) {
        total_sum += num;
    }

    for (size_t i = 0; i < arr.size(); ++i) {
       
        total_sum -= arr[i];

        if (left_sum == total_sum) {
            return i; 
        }

        left_sum += arr[i];
    }

    return -1;
}
int main() {
    std::vector<int> arr = {1, 2, 3, 4, 3, 2, 1}; 
    int index = findEquilibriumIndex(arr);
    
    if (index != -1) {
        cout << "Equilibrium index found at: " << index << endl;
    } else {
        cout << "No equilibrium index exists." << endl;
    }

    return 0;
}
