

#include <stdio.h>

int main()
{
    int n;
    printf("Enter number of rows: ");
    scanf("%d", &n);

    if (n % 2 == 0) {
        printf("Please enter an odd number.\n");
        return 1;
    }

    int spaces = n / 2;  
    int stars = 1;       
    int midpoint = n / 2 + 1; 

    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= spaces; j++) {
            printf(" ");
        }
        for (int k = 1; k <= stars; k++) {
            printf("*");
        }
        printf("\n");  
        if (i < midpoint) {
            spaces--;  
            stars += 2;
        } else {
            spaces++;  
            stars -= 2; 
        }
    }

    return 0;
}


