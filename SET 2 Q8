#include <iostream>
#include <vector>
#include <limits>
using namespace std;

int maxSum(vector<int>& arr, int k) {
    int n = arr.size();
    
    if (k > n) {
       cout << "Invalid" << std::endl;
        return -1;
    }

    int max_sum = 0;
    for (int i = 0; i < k; ++i) {
        max_sum += arr[i];
    }

    int current_sum = max_sum;

    for (int i = k; i < n; ++i) {
        current_sum += arr[i] - arr[i - k]; 
        max_sum = max(max_sum, current_sum); 
    }

    return max_sum;
}

int main() {
    vector<int> arr1 = {100, 200, 300, 400};
    int k1 = 2;
    cout << "Maximum sum of " << k1 << " consecutive elements: " 
              << maxSum(arr1, k1) << endl; // Output: 700

    vector<int> arr2 = {1, 4, 2, 10, 23, 3, 1, 0, 20};
    int k2 = 4;
    cout << "Maximum sum of " << k2 << " consecutive elements: " 
              << maxSum(arr2, k2) << endl; // Output: 39

    vector<int> arr3 = {2, 3};
    int k3 = 3;
    cout << "Maximum sum of " << k3 << " consecutive elements: " 
              << maxSum(arr3, k3) << endl; // Output: Invalid

    return 0;
}
