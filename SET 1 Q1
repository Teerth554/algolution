//program to count total number of negative numbers in array
#include <iostream>
using namespace std;

int countNegativeNumbers(int arr[], int size) {
    int count = 0;
    for (int i = 0; i < size; i++) {
        if (arr[i] < 0) {
            count++;
        }
    }
    return count;
}

int main() {
    int size;
    cout << "Enter the size of the array: ";
    cin >> size;
    int arr[size];
    cout << "Enter the elements of the array:" << endl;
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }
    int negCount = countNegativeNumbers(arr, size);
    cout << "Total number of negative numbers: " << negCount << endl;
    
    return 0;
}
